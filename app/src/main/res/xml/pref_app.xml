<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <ListPreference
        android:defaultValue="4"
        android:entries="@array/pref_weather_font_sizes"
        android:entryValues="@array/pref_weather_font_sizes"
        android:key="weather_font_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_weather_font_size" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/pref_news_font_sizes"
        android:entryValues="@array/pref_news_font_sizes"
        android:key="news_font_size"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_news_font_size" />

</PreferenceScreen>
