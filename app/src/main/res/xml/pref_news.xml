<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="enable_news_reports"
        android:title="@string/pref_title_new_message_notifications" />

    <ListPreference
        android:dependency="enable_news_reports"
        android:defaultValue="4"
        android:entries="@array/pref_news_font_sizes"
        android:entryValues="@array/pref_news_font_sizes"
        android:key="news_fontsize"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_news_font_size" />
    <SwitchPreference
        android:dependency="enable_news_reports"
        android:defaultValue="false"
        android:key="bold_news_text"
        android:title="@string/pref_bold_news_text" />

    <ListPreference
        android:dependency="enable_news_reports"
        android:defaultValue="5"
        android:entries="@array/pref_news_story_titles"
        android:entryValues="@array/pref_news_story_values"
        android:key="news_stories"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_news_stories_to_display" />

    <ListPreference
        android:dependency="enable_news_reports"
        android:entries="@array/rss_news_feeds"
        android:entryValues="@array/rss_news_urls"
        android:key="rss_feed"
        android:title="@string/rss_feeds_title" />

    <SwitchPreference
        android:dependency="enable_news_reports"
        android:defaultValue="false"
        android:key="custom_rss_feed_switch"
        android:summary="@string/pref_description_rss_feed"
        android:title="@string/pref_title_rss_feed" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <EditTextPreference
        android:dependency="custom_rss_feed_switch"
        android:defaultValue="@string/pref_rss_custom_url"
        android:inputType="textCapWords"
        android:key="rss_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_custom_rss_feed" />

</PreferenceScreen>
